<?xml version="1.0" encoding="UTF-8"?>

<config>

    <import name="sqls"            class="java.util.ArrayList" />
    <import name="sqlGroup"        class="org.hy.common.xml.plugins.XSQLGroup" />
    <import name="sql"             class="org.hy.common.xml.XSQL" />



    <sqls>
    
        <sql id="XSQL_PingShan_UserNiceLog_Insert"> 
        
            <dataSourceGroup ref="DSG_HMS" />
            
            <content>
                <![CDATA[
                INSERT  INTO UserNiceLog
                       (
                        userID    
                       ,niceID  
                       ,niceType 
                       ,createTime
                       )
                VALUES (
                        ':userID'
                       ,':niceID'
                       ,':niceType'
                       ,NOW()
                       )
                ]]>
            </content>
            
        </sql>
        
        
        
        <sql id="XSQL_PingShan_UserNiceLog_Del"> 
        
            <dataSourceGroup ref="DSG_HMS" />
            
            <content>
                <![CDATA[
                DELETE  FROM UserNiceLog
                 WHERE  userID   = ':userID'
                   AND  niceID   = ':niceID'
                   AND  niceType = ':niceType'
                ]]>
            </content>
            
        </sql>
        
    </sqls>
    
</config>