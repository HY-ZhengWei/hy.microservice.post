<?xml version="1.0" encoding="UTF-8"?>

<config>

    <import name="sqls"            class="java.util.ArrayList" />
    <import name="sqlGroup"        class="org.hy.common.xml.plugins.XSQLGroup" />
    <import name="sql"             class="org.hy.common.xml.XSQL" />



    <sqls>
    
        <sql id="XSQL_UserNiceLog_Insert"> 
        
            <dataSourceGroup ref="DSG_MS_Post" />
            
            <content>
                <![CDATA[
                INSERT  INTO UserNiceLog
                       (
                        userID 
                       ,userName
                       ,userIcon
                       ,userType
                       ,niceID  
                       ,niceType 
                       ,createTime
                       )
                VALUES (
                        ':userID'
                       ,':userName'
                       ,':userIcon'
                       ,':userType'
                       ,':niceID'
                       ,':niceType'
                       ,NOW()
                       )
                ]]>
            </content>
            
        </sql>
        
        
        
        <sql id="XSQL_UserNiceLog_Del"> 
        
            <dataSourceGroup ref="DSG_MS_Post" />
            
            <content>
                <![CDATA[
                DELETE  FROM UserNiceLog
                 WHERE  userID   = ':userID'
                   AND  niceID   = ':niceID'
                   AND  niceType = ':niceType'
                ]]>
            </content>
            
        </sql>
        
        
        
        <sql id="XSQL_UserNiceLog_Query_NiceCount"> 
        
            <dataSourceGroup ref="DSG_MS_Post" />
            
            <content>
                <![CDATA[
                SELECT  COUNT(1) AS totalCount 
                  FROM  UserNiceLog
                 WHERE  niceID   = ':niceID'
                   AND  userType = ':userType'
                ]]>
            </content>
            
            <result>
                <row>org.hy.microservice.post.userNice.UserNiceLog</row>
                <cfill>setter(colValue)</cfill>
            </result>
            
        </sql>
        
    </sqls>
    
</config>